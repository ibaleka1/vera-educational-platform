{
  "name": "vera-educational-platform-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for VERA Educational Platform",
  "main": "vera-test-runner.js",
  "scripts": {
    "test": "node vera-test-runner.js",
    "test:unit": "node vera-test-runner.js --unit",
    "test:integration": "node vera-test-runner.js --integration", 
    "test:e2e": "node vera-test-runner.js --e2e",
    "test:performance": "node vera-test-runner.js --performance",
    "test:security": "node vera-test-runner.js --security",
    "test:watch": "nodemon vera-test-runner.js",
    "test:coverage": "nyc node vera-test-runner.js",
    "test:ci": "node vera-test-runner.js --continue-on-failure",
    "test:report": "node generate-test-report.js",
    "test:clean": "rm -rf test-results coverage .nyc_output"
  },
  "keywords": [
    "vera",
    "testing",
    "nervous-system",
    "trauma-informed",
    "educational-platform"
  ],
  "devDependencies": {
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "puppeteer": "^21.5.2",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "supertest": "^6.3.3",
    "nock": "^13.4.0",
    "artillery": "^2.0.3",
    "k6": "^0.47.0",
    "nyc": "^15.1.0",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "faker": "^6.6.6",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/helpers/"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/helpers/",
      "/coverage/"
    ],
    "setupFilesAfterEnv": [
      "./tests/helpers/jest-setup.js"
    ],
    "testTimeout": 30000,
    "maxWorkers": 4,
    "verbose": true
  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "exclude": [
      "tests/**",
      "coverage/**",
      "node_modules/**"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ibaleka1/vera-educational-platform.git"
  },
  "author": "VERA Development Team",
  "license": "MIT"
}