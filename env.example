# VERA Platform Environment Configuration

# OpenAI API Key for Eva's Chat Support
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Platform Configuration
NODE_ENV=development
PORT=3000

# Eva Leka's Methodology Settings
VERA_CRISIS_THRESHOLD=high
VERA_RESPONSE_MODE=authentic
VERA_TRAUMA_INFORMED=true

# API Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Analytics (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=your_analytics_key_here

# Security Settings
SESSION_SECRET=your_secure_session_secret_here
CORS_ORIGIN=http://localhost:3000

# Database (Optional - if you want to store journal entries)
DATABASE_URL=your_database_url_here

# Email Support (Optional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email_username
SMTP_PASS=your_email_password

# Crisis Support Settings
CRISIS_HOTLINE=988
CRISIS_TEXT=741741
CRISIS_CHAT=https://suicidepreventionlifeline.org/chat/

# Eva's Authentic Settings
EVA_METHODOLOGY_VERSION=1.0.0
EVA_TRAUMA_YEARS=18
EVA_RECOVERY_APPROACH=nervous_system_regulation